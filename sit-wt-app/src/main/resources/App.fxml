<!--             </tooltip> -->
<!--           </Label> -->
          <Label onMouseClicked="#settings" styleClass="image-btn,settings-btn">
            <tooltip>
              <Tooltip text="設定ファイルのフォルダを開きます" />
            </tooltip>
          </Label>
        </items>
      </ToolBar>
    </HBox>
  </top>
