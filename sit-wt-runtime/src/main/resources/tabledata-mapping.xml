<mapping
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.sitoolkit.org/schema/tabledata-mapping/1.1'
    xsi:schemaLocation='http://www.sitoolkit.org/schema/tabledata-mapping/1.1 https://raw.githubusercontent.com/sitoolkit/sit-util-td/master/src/main/xsd/tabledata-mapping-1.1.xsd'>

    <table beanId="testStep" name="テストステップ">
        <column property="no" name="No."/>
        <column property="itemName" name="ItemName">
          <localizedName locale="ja">項目名</localizedName>
          <localizedName locale="en">ItemName</localizedName>
        </column>
        <column property="operation" name="Operation">
          <localizedName locale="ja">操作</localizedName>
          <localizedName locale="en">Operation</localizedName>
        </column>
        <column property="operationName" name="OperationName">
          <localizedName locale="ja">操作</localizedName>
          <localizedName locale="en">Operation</localizedName>
        </column>
        <column property="locator.type" name="LocatorStyle">
          <localizedName locale="ja">ロケーター形式</localizedName>
          <localizedName locale="en">LocatorStyle</localizedName>
        </column>
        <column property="locator.value" name="Locator">
          <localizedName locale="ja">ロケーター</localizedName>
          <localizedName locale="en">Locator</localizedName>
        </column>
        <column property="dataType" name="DataStyle">
          <localizedName locale="ja">データ形式</localizedName>
          <localizedName locale="en">DataStyle</localizedName>
        </column>
        <column property="screenshotTiming" name="Screenshot">
          <localizedName locale="ja">スクリーンショット</localizedName>
          <localizedName locale="en">Screenshot</localizedName>
        </column>
        <column property="testData" name="TestData" pattern="Case_(.*)$">
          <localizedName locale="ja">テストデータ</localizedName>
          <localizedPattern locale="ja">ケース_(.*)$</localizedPattern>
          <localizedName locale="en">TestData</localizedName>
          <localizedPattern locale="en">Case_(.*)$</localizedPattern>
        </column>
        <column property="breakPoint" name="BreakPoint">
          <localizedName locale="ja">ブレークポイント</localizedName>
          <localizedName locale="en">BreakPoint</localizedName>
        </column>
    </table>

    <table beanId="pageItemSpec" name="画面定義書ファイル">
        <column property="name" name="項目"/>
        <column property="control" name="コントロール"/>
        <column property="pname" name="項目物理名"/>
    </table>

</mapping>
